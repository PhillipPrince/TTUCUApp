<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ScrollView
        android:id="@+id/userDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="40dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:layout_gravity="center"
                android:thicknessRatio="1.9">
                <ImageView
                    android:id="@+id/myProfile"
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/profile"
                    android:layout_alignParentTop="true"
                    android:onClick="selectImage"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Name  :"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></TextView>

                    <TextView
                        android:id="@+id/profileUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="User Name"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></TextView>

                    <TextView
                        android:id="@+id/profileMail"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Email"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></TextView>

                    <TextView
                        android:id="@+id/profilePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Phone:"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></TextView>

                    <TextView
                        android:id="@+id/profileReg"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Registration No:"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></TextView>
                    <TextView
                        android:id="@+id/profileCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Course"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    android:layout_marginLeft="20dp">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></EditText>

                    <EditText
                        android:id="@+id/uName"
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></EditText>
                    <EditText
                        android:id="@+id/uEmail"
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></EditText>
                    <EditText
                        android:id="@+id/uPhone"
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></EditText>
                    <EditText
                        android:id="@+id/uReg"
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></EditText>
                    <EditText
                        android:id="@+id/uCourse"
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:inputType="text"
                        android:textColor="#03115E"
                        ></EditText>

                </LinearLayout>

            </LinearLayout>



            <TextView
                android:id="@+id/updateProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Update profile"
                android:textColor="#0626F3"
                android:onClick="updateProfile"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="40dp"
                    android:text="Ministries Serving"
                    android:inputType="text"
                    android:textColor="#03115E"
                    ></TextView>
                <ListView
                    android:id="@+id/ministriesServing"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:textColor="#03115E"
                    ></ListView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>